/**index.wxss**/

.calc-page {
  height: 100%;
  padding: 130px 15px;
  display: flex;
  flex-direction: column;
}

/* 计算器结果显示区 */
.calc-display {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 40rpx 20rpx;
  border-bottom: 1rpx solid #999;
  text-align: right;
}

/* 计算表达式 */
.calc-expression {
  font-size: 60rpx;
  color: gray;
}

/* 计算结果 */
.calc-result {
  font-size: 100rpx;
}

/* 计算器输入区 */
.calc-input {
  flex-grow: 0;
  padding: 40rpx 0;
}

/* 按钮行 */
.calc-input-row {
  margin: 10px 0;
  display: flex;
  flex-direction: row;
}

.calc-input-col {
  flex: 1 1 25%;
}

.calc-input-col-2 {
  flex: 2 1 50%;
}

.calc-button-wrap {
  display: flex;
  padding: 0 5px;
}

.calc-button {
  flex-grow: 1;
  font-size: 20px;
  display: flex;
  height: 120rpx;
  justify-content: center;
  align-items: center;
  background-color: #f2f2f2;
  color: #06ae56;
  border-radius: 4px;
  font-weight: 700;
}

.calc-button-hover {
  background-color: #06ae56;
  color: #f2f2f2;
}